<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_start"
    tools:context=".DetailedActivity">


    <ImageView
        android:elevation="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_width="140dp"
        android:layout_height="250dp"
        android:id="@+id/skin"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="343dp"
        android:layout_height="343dp"
        android:background="@drawable/ic_card_background"/>

    <ImageView
        android:onClick="onExportGallery"
        android:layout_marginTop="425dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_export_to_galery"/>

    <ImageView
        android:onClick="onExport"
        android:layout_marginTop="511dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_export"/>

</RelativeLayout>